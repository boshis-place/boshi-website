<section class="Home-events HomeEvents">
  <header class="HomeEvents-header">
    <h1 class="HomeEvents-title">
      {{ name }}
    </h1>

    <form class="HomeEvents-archiveToggle">
      {% assign toggleId = name | id | concat: "-archive" %}
      <input id="{{ toggleId }}" type="checkbox">
      <label for="{{ toggleId }}">archive mode</label>
    </form>
  </header>

  {% for event in events %}
    {% render "home/HomeEvent", event: event, forloop: forloop %}
  {% endfor %}
</section>